generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Language {
  id           Int      @id @default(autoincrement())
  code         String   @unique // "he", "es", "fr", "it", "de", "ru", "zh", "pt", "ja"
  name         String   // "Hebrew", "Spanish", "French", etc.
  nativeName   String   // "עברית", "Español", "Français", etc.
  isRTL        Boolean  @default(false) // Right-to-left languages
  fontFamily   String?  // Custom font requirements
  isActive     Boolean  @default(true)
  createdAt    DateTime @default(now())
  
  sections     Section[]
  words        Word[]
}

model User {
  id            Int              @id @default(autoincrement())
  username      String           @unique
  email         String           @unique
  passwordHash  String
  createdAt     DateTime         @default(now())
  updatedAt     DateTime         @updatedAt
  currentStreak Int              @default(0)
  longestStreak Int              @default(0)
  sections      Section[]
  sessions      SessionHistory[]
  progress      UserProgress[]
}

model Section {
  id              Int      @id @default(autoincrement())
  name            String
  description     String?
  isDefault       Boolean  @default(false)
  createdByUserId Int?
  languageId      Int      // NEW: Language association
  createdAt       DateTime @default(now())
  
  createdByUser   User?    @relation(fields: [createdByUserId], references: [id])
  language        Language @relation(fields: [languageId], references: [id])
  words           Word[]
  
  @@unique([name, languageId]) // Unique section names per language
}

model Word {
  id                 Int            @id @default(autoincrement())
  sectionId          Int
  languageId         Int            // NEW: Direct language reference
  originalText       String         // Replaces "hebrewText" - the target language
  translationText    String         // Replaces "englishTranslation" - base language
  pronunciation      String?        // NEW: For languages like Chinese, Japanese
  difficulty         Int            @default(1) // 1-5 scale
  audioUrl           String?        // NEW: For pronunciation support
  imageUrl           String?        // NEW: Visual learning support
  createdAt          DateTime       @default(now())
  
  progress           UserProgress[]
  section            Section        @relation(fields: [sectionId], references: [id])
  language           Language       @relation(fields: [languageId], references: [id])
  
  @@index([sectionId])
  @@index([languageId])
}

model UserProgress {
  id                 Int       @id @default(autoincrement())
  userId             Int
  wordId             Int
  correctCount       Int       @default(0)
  incorrectCount     Int       @default(0)
  consecutiveCorrect Int       @default(0)
  lastSeen           DateTime?
  timesSeen          Int       @default(0)
  isManuallyLearned  Boolean   @default(false)
  createdAt          DateTime  @default(now())
  updatedAt          DateTime  @updatedAt
  easinessFactor     Float     @default(2.5)
  interval           Int       @default(1)
  nextReviewDate     DateTime  @default(now())
  quality            Int?
  repetition         Int       @default(0)
  user               User      @relation(fields: [userId], references: [id])
  word               Word      @relation(fields: [wordId], references: [id])

  @@unique([userId, wordId])
  @@index([userId])
  @@index([wordId])
  @@index([nextReviewDate])
}

model SessionHistory {
  id             Int      @id @default(autoincrement())
  userId         Int
  sessionDate    DateTime @default(now())
  wordsStudied   Int
  correctAnswers Int
  sessionLength  Int
  user           User     @relation(fields: [userId], references: [id])
}
